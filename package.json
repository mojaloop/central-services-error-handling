{
  "name": "@mojaloop/central-services-error-handling",
  "version": "10.2.3",
  "description": "Hapi error handling module",
  "main": "src/index.js",
  "pre-commit": [
    "standard",
    "dep:check",
    "test"
  ],
  "scripts": {
    "test": "npm run test:unit | faucet",
    "standard": "standard",
    "test:unit": "tape 'test/**/*.test.js'",
    "test:xunit": "npm run test:unit | tap-xunit",
    "test:coverage": "nyc --reporter=lcov --reporter=text-summary tape -- 'test/**/*.test.js'",
    "test:coverage-check": "npm run test:coverage && nyc check-coverage",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/central-services-error-handling.git"
  },
  "keywords": [
    "central",
    "services",
    "hapi",
    "error",
    "handling"
  ],
  "author": "ModusBox",
  "contributors": [
    "Dwolla",
    "ModusBox"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/central-services-error-handling/issues"
  },
  "homepage": "https://github.com/mojaloop/central-services-error-handling#readme",
  "dependencies": {
    "@mojaloop/sdk-standard-components": "10.2.4",
    "lodash": "4.17.15"
  },
  "devDependencies": {
    "@hapi/boom": "9.1.0",
    "faucet": "0.0.1",
    "npm-audit-resolver": "2.2.0",
    "npm-check-updates": "6.0.1",
    "nyc": "15.0.1",
    "pre-commit": "1.2.2",
    "proxyquire": "2.1.3",
    "sinon": "9.0.2",
    "standard": "14.3.4",
    "tap-xunit": "2.4.1",
    "tape": "5.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
